<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">

  <id>distribution</id>
  <baseDirectory>${project.name}-${project.version}</baseDirectory>

  <formats>
    <format>zip</format>
  </formats>

  <files>
    <file>
      <source>src/main/resources/logback.xml</source>
      <outputDirectory>etc</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>src/main/resources/container.conf</source>
      <outputDirectory>etc</outputDirectory>
      <fileMode>0644</fileMode>
    </file>
    <file>
      <source>src/main/resources/run.sh</source>
      <outputDirectory></outputDirectory>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>src/main/resources/run-debug.sh</source>
      <outputDirectory></outputDirectory>
      <fileMode>0755</fileMode>
    </file>
  </files>

  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <includes>
        <include>com.io7m.callisto:com.io7m.callisto.container:*</include>
      </includes>
      <scope>runtime</scope>
      <outputDirectory>lib-boot</outputDirectory>
    </dependencySet>

    <dependencySet>
      <unpack>false</unpack>
      <includes>
        <include>org.apache.felix:*</include>
      </includes>
      <scope>runtime</scope>
      <outputDirectory>lib-system</outputDirectory>
    </dependencySet>

    <dependencySet>
      <unpack>false</unpack>
      <includes>
        <include>com.io7m.callisto:*</include>
      </includes>
      <excludes>
        <exclude>org.apache.felix:*</exclude>
        <exclude>com.io7m.callisto:com.io7m.callisto.distribution:*</exclude>
        <exclude>com.io7m.callisto:com.io7m.callisto.container:*</exclude>
      </excludes>
      <scope>runtime</scope>
      <outputDirectory>lib-engine</outputDirectory>
    </dependencySet>

    <dependencySet>
      <unpack>false</unpack>
      <excludes>
        <exclude>org.apache.felix:*</exclude>
        <exclude>com.io7m.callisto:*</exclude>
        <exclude>org.slf4j:*</exclude>
      </excludes>
      <scope>runtime</scope>
      <outputDirectory>lib-user</outputDirectory>
    </dependencySet>
  </dependencySets>

</assembly>