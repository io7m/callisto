<xs:schema
  xmlns:s="urn:com.io7m.callisto.stringtables:1.0"
  targetNamespace="urn:com.io7m.callisto.stringtables:1.0"
  elementFormDefault="qualified"
  xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:annotation>
    <xs:documentation>
      Element definitions for declaring string tables.
    </xs:documentation>
  </xs:annotation>

  <xs:simpleType name="languageNameType">
    <xs:annotation>
      <xs:documentation>
        The ISO-639-3 code for a language.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:pattern value="[\p{Ll}]{3}"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="stringNameType">
    <xs:annotation>
      <xs:documentation>
        The type of string names. String names may consist of letters,
        numbers, and the underscore, and must begin with a letter.
      </xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:pattern value="[\p{Ll}\p{Lu}][\p{Ll}\p{Lu}\p{Nd}_]*"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:element name="text">
    <xs:annotation>
      <xs:documentation>
        The actual text of a string in the default language.
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:simpleContent>
        <xs:extension base="xs:string"/>
      </xs:simpleContent>
    </xs:complexType>
  </xs:element>

  <xs:element name="alt">
    <xs:annotation>
      <xs:documentation>
        A translation of a string in a specific language.
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:simpleContent>
        <xs:extension base="xs:string">
          <xs:attribute name="language"
                        type="s:languageNameType"
                        use="required"/>
        </xs:extension>
      </xs:simpleContent>
    </xs:complexType>
  </xs:element>

  <xs:element name="string">
    <xs:annotation>
      <xs:documentation>
        The definition of a string. A string has a unique name, a required
        translation for the default language, and a set of optional extra
        translations indexed by language. A string may not contain two
        translations that are marked as having the same language.
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence minOccurs="1" maxOccurs="1">
        <xs:element ref="s:text"/>
        <xs:sequence minOccurs="0" maxOccurs="unbounded">
          <xs:element ref="s:alt"/>
        </xs:sequence>
      </xs:sequence>
      <xs:attribute name="name" type="s:stringNameType" use="required"/>
    </xs:complexType>
    <xs:unique name="stringLanguagesAreUnique">
      <xs:selector xpath="s:content"/>
      <xs:field xpath="@language"/>
    </xs:unique>
  </xs:element>

  <xs:element name="string-table">
    <xs:annotation>
      <xs:documentation>
        The definition of a string table. A string table contains a set of
        uniquely-named strings.
      </xs:documentation>
    </xs:annotation>
    <xs:complexType>
      <xs:sequence minOccurs="0" maxOccurs="unbounded">
        <xs:element ref="s:string"/>
      </xs:sequence>
      <xs:attribute name="languageDefault"
                    type="s:languageNameType"
                    use="required"/>
    </xs:complexType>
    <xs:unique name="stringNamesAreUnique">
      <xs:selector xpath="s:string"/>
      <xs:field xpath="@name"/>
    </xs:unique>
  </xs:element>

</xs:schema>